class Solution:
    def longestSubarray(self, arr, k):
        n = len(arr)
        maxl = 0
        
        for i in range(n):
            countg = 0
            countle = 0
            for j in range(i, n):
                if arr[j] > k:
                    countg += 1 
                else:
                    countle += 1
                    
                if countg > countle:
                    maxl = max(maxl, j - i + 1)
                    
        return maxl 
