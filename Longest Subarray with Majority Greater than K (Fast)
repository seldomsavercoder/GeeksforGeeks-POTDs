class Solution:
    def longestSubarray(self, arr, k):
        prefix_sum = 0
        max_len = 0
        first_occurrence = {}

        for i, val in enumerate(arr):
            
            prefix_sum += 1 if val > k else -1

           
            if prefix_sum > 0:
                max_len = i + 1

            else:
                
                first_occurrence.setdefault(prefix_sum, i)

                
                if (prefix_sum - 1) in first_occurrence:
                    max_len = max(max_len, i - first_occurrence[prefix_sum - 1])

        return max_len
